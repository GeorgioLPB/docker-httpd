#!/bin/bash
ServerRoot="/usr/local/apache2"
url="https://geolite.maxmind.com/download/geoip/database/GeoLite2-Country.tar.gz"
[ ! -d "${ServerRoot}/maxmind" ] && mkdir -p -m 750 "${ServerRoot}/maxmind"

function update()
{
	cd "${ServerRoot}/maxmind/" && \
	#wget -O "GeoLite2-Country.tar.gz.md5.new" "${url}.md5" && \
	wget -O "GeoLite2-Country.tar.gz" "${url}" && \
	tar -zxvf "GeoLite2-Country.tar.gz" && \
	rm -vf "GeoLite2-Country.tar.gz" && \
	mv -vf GeoLite2-Country_*/* ./ && \
	rm -rvf GeoLite2-Country_* && \
	chown -R root:www-data . && \
	chmod -R u=rwX,g=rX,o= . && \
	ls -la
}

update
